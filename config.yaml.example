account:
  symbol: "XAUUSD"
  lot_min: 0.01
  lot_step: 0.01
  leverage: 100
  login: 12345678       # Replace with your MT5 login
  password: "password"  # Replace with your MT5 password
  server: "server"      # Replace with your MT5 server

monitor:
  telegram_bot_token: ""
  telegram_chat_id: ""
  poll_interval: 10       # seconds


strategy:
  tf3: "H4"             # Trend Bias
  tf2: "H1"             # Entry Zone
  tf1: "M15"            # Execution / Confirmation
  rsi_period: 14
  wma_period: 45
  ema_period: 9
  adx_period: 14
  adx_threshold: 25
  # Bias Logic (TF3)
  rsi_upper: 75
  rsi_lower: 25
  bias_rsi_threshold_high: 75
  bias_rsi_threshold_low: 25
  tf2_zone_tolerance: 5.0 # Tolerance for "near WMA" check
  sl_method: "swing"      # options: swing, fixed_pips
  swing_lookback: 20      # bars to look back for swing high/low
  fixed_sl_pips: 50       # 50 pips = 500 points
  tp_rr: 2.0

filters:
  max_spread: 20 # Points
  start_hour: 8
  end_hour: 20              # Reward/Risk Ratio

news_filter:
  enabled: true
  minutes_before: 30
  minutes_after: 30
  include_medium: false # Set to true to pause for Medium impact too

trailing:
  enabled: true
  activation_rr: 1.0   # Start trailing when profit >= 1R
  trailing_dist_rr: 0.5 # Trail by 0.5R (or set to 0.0 for Breakeven only)

risk:
  risk_percent_per_trade: 1.0
  max_daily_loss_percent: 5.0
  max_consecutive_losses: 5

execution:
  deviation: 20           # max slippage in points
  allow_pyramiding: False
  magic: 123456

